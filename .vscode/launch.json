{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Discovery-1",
            "request": "launch",
            "mainClass": "com.github.hiling.discovery.DiscoveryApplication",
            "projectName": "mini-discovery",
            "vmArgs": ["-Dspring.profiles.active=discovery1"]
        },
        {
            "type": "java",
            "name": "Gateway-Dev",
            "request": "launch",
            "mainClass": "com.github.hiling.gateway.GatewayApplication",
            "projectName": "mini-gateway",
            "vmArgs": "-Dspring.profiles.active=dev"
        },
        {
            "type": "java",
            "name": "User-Dev",
            "request": "launch",
            "mainClass": "com.github.hiling.user.UserApplication",
            "projectName": "user",
            "vmArgs": "-Dspring.profiles.active=dev"
        }
    ]
}